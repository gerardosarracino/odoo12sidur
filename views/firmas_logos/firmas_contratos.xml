<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
<!--  Formulario de firmas_contratos    -->
        <record id="firmas_logos_firmas_contratos_view" model="ir.ui.view">
            <field name="name">Titular Form</field>
            <field name="model">firmas_logos.firmas_contratos</field>
            <field name="arch" type="xml">
                <form string="firmas_contratos form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="puesto_testigo_uno"/>
                            <field name="nombre_testigo_dos"/>
                            <field name="puesto_testigo_dos"/>
                            <field name="nombre_testigo_tres"/>
                            <field name="puesto_testigo_tres"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--  vista tree      -->
        <record id="firmas_logos_firmas_contratos_tree_view" model="ir.ui.view">
            <field name="name">Titular Tree</field>
            <field name="model">firmas_logos.firmas_contratos</field>
            <field name="arch" type="xml">
                <tree string="firmas_contratos tree" >
                    <field name="name"/>
                    <field name="puesto_testigo_uno"/>
                    <field name="nombre_testigo_dos"/>
                    <field name="puesto_testigo_dos"/>
                    <field name="nombre_testigo_tres"/>
                    <field name="puesto_testigo_tres"/>
                </tree>
            </field>
        </record>

        <!--  action view      -->
        <record id="action_firmas_logos_firmas_contratos" model="ir.actions.act_window">
            <field name="name">Firmas de contratos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">firmas_logos.firmas_contratos</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Agregar Firmas de contratos
              </p>
            </field>
        </record>
        <menuitem id="firmas_logos_firmas_contratos" parent="firmas_logos" name="Firmas de contratos"
                  action="action_firmas_logos_firmas_contratos" sequence="1"/>
  </data>
</odoo>