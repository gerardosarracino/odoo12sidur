<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <!--  Formulario de dependencia institucion      -->
        <record id="firmas_logos_dependencia_institucion_view" model="ir.ui.view">
            <field name="name">Dependencia Institucion Form</field>
            <field name="model">firmas_logos.dependencia_institucion</field>
            <field name="arch" type="xml">
                <form string="dependencia institucion form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="image" widget='image' class="oe_avatar"/>
                            <field name="declaraciones_dependencia"/>
                            <field name="titular"/>
                            <field name="domicilio"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--  vista tree      -->
        <record id="firmas_logos_dependencia_institucion_tree_view" model="ir.ui.view">
            <field name="name">Dependencia Institucion Tree</field>
            <field name="model">firmas_logos.dependencia_institucion</field>
            <field name="arch" type="xml">
                <tree string="dependencia institucion tree" >
                    <field name="name"/>
                    <field name="image" widget='image' class="oe_avatar"/>
                    <field name="declaraciones_dependencia"/>
                    <field name="titular"/>
                    <field name="domicilio"/>
                </tree>
            </field>
        </record>

        <!--  action view      -->
        <record id="action_firmas_logos_dependencia_institucion" model="ir.actions.act_window">
            <field name="name">Dependencia/Institución</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">firmas_logos.dependencia_institucion</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Insertar Datos de la Dependencia o Institución
              </p>
            </field>
        </record>
        <menuitem id="dependencia_institucion" parent="firmas_logos" name="Dependencia/Institución"
                  action="action_firmas_logos_dependencia_institucion" sequence="1"/>
  </data>
</odoo>