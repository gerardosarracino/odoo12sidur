<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
<!--  Formulario de director_coordinador_administrativo   -->
        <record id="firmas_logos_director_coordinador_administrativo_view" model="ir.ui.view">
            <field name="name">Director Coordinador Administrativo Form</field>
            <field name="model">firmas_logos.director_coordinador_administrativo</field>
            <field name="arch" type="xml">
                <form string="director coordinador administrativo form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="puesto"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--  vista tree      -->
        <record id="firmas_logos_director_coordinador_administrativo_tree_view" model="ir.ui.view">
            <field name="name">Director Coordinador Administrativoo Tree</field>
            <field name="model">firmas_logos.director_coordinador_administrativo</field>
            <field name="arch" type="xml">
                <tree string="director coordinador administrativo tree" >
                    <field name="name"/>
                    <field name="puesto"/>
                </tree>
            </field>
        </record>

        <!--  action view      -->
        <record id="action_firmas_logos_director_coordinador_administrativo" model="ir.actions.act_window">
            <field name="name">Director / Coordinador Administrativo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">firmas_logos.director_coordinador_administrativo</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Agregar Director / Coordinador Administrativo
              </p>
            </field>
        </record>
        <menuitem id="firmas_logos_director_coordinador_administrativo" parent="firmas_logos"
                  name="Director / Coordinador Administrativo"
                  action="action_firmas_logos_director_coordinador_administrativo" sequence="1"/>
  </data>
</odoo>