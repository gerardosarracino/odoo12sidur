<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
<!--  Formulario de director_coordinador_planeacion   -->
        <record id="firmas_logos_director_coordinador_planeacion_view" model="ir.ui.view">
            <field name="name">director coordinador planeacion Form</field>
            <field name="model">firmas_logos.director_coordinador_planeacion</field>
            <field name="arch" type="xml">
                <form string="director coordinador planeacion form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="puesto"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--  vista tree      -->
        <record id="firmas_logos_director_coordinador_planeacion_tree_view" model="ir.ui.view">
            <field name="name">director coordinador planeaciono Tree</field>
            <field name="model">firmas_logos.director_coordinador_planeacion</field>
            <field name="arch" type="xml">
                <tree string="director coordinador planeacion tree" >
                    <field name="name"/>
                    <field name="puesto"/>
                </tree>
            </field>
        </record>

        <!--  action view      -->
        <record id="action_firmas_logos_director_coordinador_planeacion" model="ir.actions.act_window">
            <field name="name">Director / Coordinador de Planeación</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">firmas_logos.director_coordinador_planeacion</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Agregar Director / Coordinador de Planeación
              </p>
            </field>
        </record>
        <menuitem id="firmas_logos_director_coordinador_planeacion" parent="firmas_logos"
                  name="Director / Coordinador de Planeación"
                  action="action_firmas_logos_director_coordinador_planeacion" sequence="1"/>
  </data>
</odoo>