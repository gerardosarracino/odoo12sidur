<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
     <!--  Formulario de datos   -->
        <record id="contratista_datos_view" model="ir.ui.view">
            <field name="name">contratista datos form</field>
            <field name="model">contratista.datos</field>
            <field name="arch" type="xml">
                <form string="datos form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="persona_moral"/>
                            <field name="persona_fisica"/>
                            <field name="activo"/>
                            <field name="rfc"/>
                            <field name="nacionalidad"/>
                            <field name="acreditacion_empresa"/>
                            <field name="calles"/>
                            <field name="numero"/>
                            <field name="colonia"/>
                            <field name="cp"/>
                            <field name="municipio_delegacion"/>
                            <field name="estado_entidad"/>
                            <field name="telefono"/>
                            <field name="correo"/>
                            <field name="registro_concursante"/>
                            <field name="objeto_social"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
         <!--  vista tree      -->
        <record id="contratista_datos_tree_view" model="ir.ui.view">
            <field name="name">contratista datos tree</field>
            <field name="model">contratista.datos</field>
            <field name="arch" type="xml">
                <tree string="datos tree">
                        <field name="name"/>
                        <field name="persona_moral"/>
                        <field name="persona_fisica"/>
                        <field name="activo"/>
                        <field name="rfc"/>
                        <field name="nacionalidad"/>
                        <field name="acreditacion_empresa"/>
                        <field name="calles"/>
                        <field name="numero"/>
                        <field name="colonia"/>
                        <field name="cp"/>
                        <field name="municipio_delegacion"/>
                        <field name="estado_entidad"/>
                        <field name="telefono"/>
                        <field name="correo"/>
                        <field name="registro_concursante"/>
                        <field name="objeto_social"/>
                </tree>
            </field>
        </record>
        <!--  action view      -->
        <record id="action_contratista_datos" model="ir.actions.act_window">
            <field name="name">Datos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">contratista.datos</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Crear Nuevos Datos
              </p>
            </field>
        </record>
        <menuitem id="contratista_datos" parent="contratista" name="Datos" action="action_contratista_datos"
                  sequence="1"/>
  </data>
</odoo>